<script>
$(function() {
    "use strict";

    /**
     * Account Details: When click button edit profile inputs not disabled.
     */
    $(".changeUserData input").attr("disabled",true);

    $('.accountDetails').one("click", function () {
        $("input").removeAttr('disabled');
        $("<button type='submit' class='btn btn-primary'><i class='fa fa-save disableSubmit' aria-hidden='true'></i> Save profile</button>").appendTo("form:last");
    });

    /**
     * When submit is click it disabled submit.
     */
    let disableSubmit = $('.disableSubmit');
    disableSubmit.on("click", function () {
        setTimeout(function () { clickButton(); }, 0);
    });

    function clickButton() {
        disableSubmit.prop('disabled', true);
    }
});
</script>