{% if paginator.hasToPaginate %}
    <div class="col-md-12">
        <nav>
            <ul class="pagination justify-content-center">

                {% if paginator.currentPage > 1 %}
                    <li class="page-item">
                        {% if app.request.attributes.get('_route') == 'my_product_offer' or app.request.attributes.get('_route') == 'my_product_offer_paginated' %}
                            <a class="page-link" href="{{ path("my_product_offer_paginated", {page: paginator.currentPage - 1}) }}" aria-label="Previous">
                        {% else %}
                            <a class="page-link" href="{{ path("advertisement_index_paginated", {page: paginator.currentPage - 1}) }}" aria-label="Previous">
                        {% endif %}
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {% endif %}

                {% for i in 1..paginator.lastPage %}
                    <li class="page-item {% if i == paginator.currentPage %}active{% endif %}">
                        {% if app.request.attributes.get('_route') == 'my_product_offer' or app.request.attributes.get('_route') == 'my_product_offer_paginated' %}
                            <a class="page-link" href="{{ path("my_product_offer_paginated", {page: i}) }}">{{ i }}</a>
                        {% else %}
                            <a class="page-link" href="{{ path("advertisement_index_paginated", {page: i}) }}">{{ i }}</a>
                        {% endif %}
                    </li>
                {% endfor %}

                {% if paginator.currentPage < paginator.lastPage %}
                    <li class="page-item">
                        {% if app.request.attributes.get('_route') == 'my_product_offer' or app.request.attributes.get('_route') == 'my_product_offer_paginated' %}
                            <a class="page-link" href="{{ path("my_product_offer_paginated", {page: paginator.currentPage + 1}) }}" aria-label="Next">
                        {% else %}
                            <a class="page-link" href="{{ path("advertisement_index_paginated", {page: paginator.currentPage + 1}) }}" aria-label="Next">
                        {% endif %}
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                {% endif %}

            </ul>
        </nav>
    </div>
{% endif %}