{% extends 'base.html.twig' %}

{% block title %}My products{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="card-deck">
                <div class="row row-cols-1 row-cols-md-3">
                    {% for productOffer in productOffers %}
                    <div class="mb-4">
                        <div class="card shadow bg-white rounded">
                            <img src="http://placehold.it/750x300" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title">Title: {{ productOffer.title }}</h5>
                                <p class="card-text">Description: {{ productOffer.description }}</p>
                                <p class="card-text">Price: {{ productOffer.price }}</p>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-primary float-left" href="" role="button">visit</a>
                                <small class="text-muted pl-5 mt-5">created at {{ productOffer.createdAt |format_datetime('medium', 'short') }} </small>
                            </div>
                        </div>
                    </div>
                    {% else %}
                </div>
            </div>
        </div>
        <div class="p-3 mb-2 bg-light text-black text-center">
            <h1>You don't have any advertisement.</h1>
        </div>
        {% endfor %}
    </div>
{% endblock %}